<% include ../partials/header %>

<div class = container>
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp!</h1>
            <p>View our handpicked campgrounds from all over the UK</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>    
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %> </h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </div>
                </div>
            </div>
            
        <% }); %>
            
    </div>
</div>

<% include ../partials/footer %>